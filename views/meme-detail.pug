extends layout
append head
    link(rel="stylesheet" href="/stylesheets/meme-detail.css")
    script(src="/javascripts/likes.js" type="module")
block content

    h1 #{meme.name}
    img(class ='memeImg' src=meme.meme_url)
    if authorized
        div(class='delete')
            a(class='deleteButton btn-global' href=`/meme/delete/${meme.id}` role='button') Delete Meme
    div(class='div-like')
        if authenticated
            if like
                button(class='btn-like btn-global' id=`likeButton`) Unlike Meme
            else
                button(class='btn-like btn-global' id=`likeButton`) Like Meme
        else
            p Likes &nbsp;

        p(id="counter") #{counter}

