extends layout

include utils

  link(rel="stylesheet" href="/stylesheets/signup.css")
block content
  +validationErrorSummary(errors)

  img(id="memeium-logo" src='/images/Memium_BonW.png')
  form(class='global' action='/signup' method='post')
    h1 Create your Account
    h2 to continue to Memium
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('First Name', 'first_name', user.first_name)
    +field('Last Name', 'last_name', user.last_name)
    +field('Email Address', 'email', user.email)
    //- +field('Password', 'password', user.password, 'password')
    label(for="password") Password
    input(type="password" name='password' required)
    //- +field('Confirm Password', 'confirmPassword', '', 'password')
    label(for="confirmPassword")  Confirm Password
    input(type="password" name='confirmPassword' required)
    div(class='buttons')
      button(type='submit' class='btn1-signup') Signup
      a(href='/' class='btn-cancel') Cancel
    div
      p: a(href='/login') Already have an account?
